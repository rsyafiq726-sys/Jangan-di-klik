<body>
  <button id="loveButton">Klik aku ðŸ’–</button>

  <script>
    const button = document.getElementById('loveButton');
    button.addEventListener('click', () => {
      const text = document.createElement('div');
      text.className = 'text';
      text.innerText = 'I love you sayangku ðŸ’ž';
      document.body.appendChild(text);

      // posisi acak di sekitar tombol
      const x = window.innerWidth / 2 + (Math.random() * 200 - 100);
      const y = window.innerHeight / 2 + (Math.random() * 200 - 100);
      text.style.left = x + 'px';
      text.style.top = y + 'px';

      setTimeout(() => text.remove(), 2500);
    });
  </script>
</body>
